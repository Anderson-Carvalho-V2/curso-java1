package entities;

public class Aluno {
	public String nome;
	public double nota1;
	public double nota2;
	public double nota3;
	public double media;
	
	public double calcMedia() {
		this.media = (nota1 + nota2 + nota3) / 3;
		return (nota1 + nota2 + nota3) / 3;
	}
	
	public String status() {
		if(this.media > 60) {
			return "Passou";
		}else {
			return "Reprovou";			
		}		
	}
	
	public String toString() {
		return nome
			+ String.format("Nota 1: %.2f%n", nota1)
			+ String.format("Nota 2: %.2f%n", nota2)
			+ String.format("Nota 3: %.2f%n", nota3)
			+ String.format("MÃ©dia: %.2f%n", calcMedia())
			+ status();
	}
	
}
